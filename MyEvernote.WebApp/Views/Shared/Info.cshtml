@model MyEvernote.WebApp.Models.InfoViewModel

@{
    ViewBag.Title = Model.Title;
}

<link href="~/Content/Login-Register.css" rel="stylesheet" />
<section class="login-info">
    <div class="container">
        <div class="container" style="margin-top: 20px;">
            <div class="form-header">
                <h1 class="text-center ">@Model.Header</h1>
            </div>

            <div class="main-content">
                <div class="text-info mb-3">
                    <h3>&nbsp;&nbsp;<i class="fa fa-info-circle" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Model.Title</h3>
                    <div class="container">
                        <hr />
                        <p class="text-justify">
                            @foreach (string item in Model.Items)
                            {
                                @item<br />
                            }
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

@{
    string js = null;
    if (Model.RedicrtingUrl != null)
    {
        js = "setTimeout(function(){window.location = '" + Model.RedicrtingUrl + " ' ; }, " + Model.RedirectingTimeout + ");";
    }
}

<script>
    $(function () {
        $("footer").hide();
        @Html.Raw(js);
    });
</script>


