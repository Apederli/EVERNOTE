@using MyEvernote.WebApp.Models
@model OkViewModel
@{
    ViewBag.Title = Model.Title;
}
<link href="~/Content/Login-Register.css" rel="stylesheet" />
<style type="text/css">
    .form-header {
        background-color: #0991f4;
    }

    .main-content {
        border-color: #0991f4;
    }

    .input-group {
        color: #0fae18;
    }

        .input-group span {
            color: rgba(170, 18, 18, 0.88);
        }
</style>
<section class="login-info">
    <div class="container">
        <div class="container" style="margin-top:20px;">
            <div class="form-header">
                <h1 class="text-center ">@Model.Header</h1>
            </div>

            <div class="main-content">
                <div class="input-group mb-3">
                    <h3>&nbsp;&nbsp;<i class="fa fa-check" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Model.Title</h3>
                    <div class="container">
                        <hr />
                        <p class="text-justify">
                            @foreach (string item in Model.Items)
                            {
                                @item<br />
                            }
                        </p>
                        <span>
                           
                        </span>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

@{
    string js = null;
    if (Model.RedicrtingUrl != null)
    {
        js = "setTimeout(function(){window.location = '" + Model.RedicrtingUrl + " ' ; }, " + Model.RedirectingTimeout + ");";
    }
}

<script>
    $(function () {
        $("footer").hide();
        @Html.Raw(js);
    });
</script>